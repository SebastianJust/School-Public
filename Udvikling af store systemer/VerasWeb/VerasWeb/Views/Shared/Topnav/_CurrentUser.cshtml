@using Microsoft.AspNetCore.Identity
@using VerasWeb.Infrastructure.ApplicationUserClaims
@using VerasWeb.Models.Identity
@inject SignInManager<ApplicationUser> SignInManager

<!-- Current user (right part of the website) -->
<ul class="navbar-nav align-items-center ml-md-auto">
    <li class="nav-item dropdown">
        <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <div class="media align-items-center">
            @if (SignInManager.IsSignedIn(User))
            {
                <span class="avatar avatar-sm rounded-circle">
                    <img alt="Image placeholder" src="~/img/theme/User.svg">
                </span>
            }
                <div class="media-body  ml-2  d-none d-lg-block">
                    <span class="mb-0 text-sm  font-weight-bold">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            @User.GetFullName()
                        }
                        else
                        {
                            <span>Anonym (Log ind)</span>
                        }
                    </span>
                </div>
            </div>
        </a>
        <partial name="Topnav/_Dropdown"/>
    </li>
</ul>
