@model VerasWeb.Handlers.Models.Customer

@using Microsoft.AspNetCore.Identity
@using VerasWeb.Models.Identity
@inject SignInManager<ApplicationUser> SignInManager

@{ Layout = "_LayoutProfile";
    ViewData["Title"] = "Borger information"; }

<div class="row">
    <div class="col-xl-4 order-xl-2">
        <div class="card card-profile">
            <img src="~/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">
            <div class="row justify-content-center">
                <div class="col-lg-3 order-lg-2">
                    <div class="card-profile-image">
                        <a href="#">
                            <img src="~/img/theme/team-4.jpg" class="rounded-circle">
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                <div class="d-flex justify-content-between">
                </div>
            </div>
            <div class="card-body pt-0">
                <div class="row">
                    <div class="col">
                        <div class="card-profile-stats d-flex justify-content-center">

                            <div>
                                <span class="heading">10</span>
                                <span class="description">Resultat</span>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="text-center">
                    <h5 class="h3">
                        @(Model?.FullName ?? Model?.FullName)<span class="font-weight-light">Navn ikke oplyst</span>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8 order-xl-1">
        <div class="card">
            <form asp-controller="Home" asp-action="Customer" method="POST">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Edit profile </h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <h6 class="heading-small text-muted mb-4">
                        Borger information
                    </h6>
                    <div class="pl-lg-4">
                        @* Update was ok *@
                        @if (!string.IsNullOrWhiteSpace(TempData["StatusMessage"] as string))
                        {<!-- everything went ok -->
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div role="alert" class="alert alert-success alert-dismissible fade show">
                                                        @TempData["StatusMessage"]
                                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                                            <span aria-hidden="true">×</span>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div> } @* Update has errors *@
                        @if (!ViewData.ModelState.IsValid && ViewData.ModelState[string.Empty] != null)
                        {<!-- errors -->
                                            @foreach (var error in @ViewData.ModelState[string.Empty]?.Errors)
                                            {
                            <div class="row">
                                <div class="col-lg-12">
                                    <div role="alert" class="alert alert-warning alert-dismissible fade show">
                                        <span>@error.ErrorMessage</span>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                            <span aria-hidden="true">×</span>
                                        </button>
                                    </div>
                                </div>
                            </div>}}
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">CPR-Nummer</label>
                                    <input asp-for="CprNumber" type="number" id="input-cpr" class="form-control" placeholder="xxxxxxxxxx">
                                    <span asp-validation-for="CprNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-username">Fulde navn</label>
                                    <input asp-for="FullName" type="text" id="input-fullName" class="form-control" placeholder="Kundens fulde navn">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <label class="form-control-label" for="input-email">Resultat</label>
                                    <select class="form-control" asp-for="Result" asp-items="@(new SelectList(new List<string>() {"Ikke påvist", "Afventer", "Påvist"}))">
                                        <option>Vælg en</option>
                                    </select>
                                </div>
                            </div>

                        </div>
                    </div>
                    <hr class="my-4" />
                </div>
                <div class="card-footer">
                    <div class="row align-items-center">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-md btn-primary">
                                Save
                            </button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
